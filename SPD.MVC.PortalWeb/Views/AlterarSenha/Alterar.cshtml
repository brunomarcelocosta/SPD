@using SPD.MVC.Geral.Global
@model SPD.MVC.PortalWeb.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Alterar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alterar Senha</h2>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="row">
            <div class="col-sm-7">
                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PasswordConfirmacao, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PasswordConfirmacao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PasswordConfirmacao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-12">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                        @{
                            int param = 1;

                            if (!Model.TrocaSenhaObrigatoria) { param = 0; }
                        }

                        <input type="button" value="Cancelar" class="btn btn-default" onClick="javascript:cancelar(@param)" />
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="text-danger">
                    Senha deve conter ao menos 8 caracteres.<br />
                    Senha deve conter no máximo 50 caracteres.<br />
                </div>
            </div>
        </div>

    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/site")
    <script src="~/Scripts/Login/AlterarSenha.js"></script>

}


