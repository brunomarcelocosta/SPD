@using SPD.MVC.Geral.Content.Texts
@model SPD.MVC.Geral.ViewModels.AuthenticationViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Para acessar o SPD é necessário se logar no sistema.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @title = "Informe o Login do usuário", @maxlength = "25", @style = "width: 207px;" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @title = "Informe a senha do usuário", @maxlength = "50", @style = "width: 207px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.ValidationMessage(this.Request.CurrentExecutionFilePath, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="row">
                    <div class="col-sm-1">
                        <input type="submit" value="@AuthenticationResource.Entrar" class="btn btn-default" />
                    </div>
                    <div class="col-sm-1">
                        <input type="button" value="@AuthenticationResource.RedefinirSenha" name="Redefine" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/Login/Login.js"></script>


}

