    function limpar_Filtros() {

        $("#Descricao_Filtro").val("");
        $("#DataDe_Filtro").val("");
        $("#DataAte_Filtro").val("");
        $("#DataDe").val("");
        $("#DataAte").val("");
        $("#TipoOperacao_Filtro").val("");
        $("#Usuario_Filtro").val("");
        $("#Funcionalidade_Filtro").val("");

    }

</script>