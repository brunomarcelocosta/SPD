@model SPD.MVC.PortalWeb.ViewModels.HistoricoOperacaoViewModel

@Html.HiddenFor(a => a.DataDe_Filtro)
@Html.HiddenFor(a => a.DataAte_Filtro)

<div class="row alert alert-info" style="margin-left:5px; margin-right:6px;">
    <h4><span class="glyphicon glyphicon-filter"></span> Filtros </h4>
    <div class="row" id="linha_ordenada"></div>
    <div class="row" id="linha">

        <div class="row">

            <div class="form-group col-md-2" id="divDesc" style="padding-left:32px;">
                @Html.Label("Descrição")
                @Html.EditorFor(model => model.Descricao_Filtro, new { htmlAttributes = new { @Value = Model.Descricao_Filtro, @class = "form-control input-sm", @style = "width: 200px" } })
            </div>

            <div class="form-group col-md-2" id="divTpOper" style="padding-left:60px;">
                @Html.Label("Tipo de Operação")
                @Html.DropDownListFor(model => model.TipoOperacao_Filtro, Model.ListTipoOperacao as SelectList, String.IsNullOrWhiteSpace(Model.TipoOperacao_Filtro) ? "" : Model.TipoOperacao_Filtro, new { @class = "form-control input-sm", @style = "width: 130px" })
            </div>

            <div class="form-group col-md-1" style="padding-left:20px;">
                @Html.Label("Usuário")
                @Html.DropDownListFor(model => model.Usuario_Filtro, Model.ListUsuario as SelectList, String.IsNullOrWhiteSpace(Model.Usuario_Filtro) ? "" : Model.Usuario_Filtro, new { @class = "form-control input-sm", @style = "width: 120px" })
            </div>

            <div class="form-group col-md-3" id="divTipoAeronave" style="padding-left:70px;">
                @Html.Label("Funcionalidade")
                @Html.DropDownListFor(model => model.Funcionalidade_Filtro, Model.ListFuncionalidade as SelectList, String.IsNullOrWhiteSpace(Model.Funcionalidade_Filtro) ? "" : Model.Funcionalidade_Filtro, new { @class = "form-control input-sm", @style = "width: 190px" })
            </div>

            <div class="col-md-3" id="divDataOper" style="padding-left:5px;">
                @Html.Label("Data da Operação")
                <div class="input-group input-daterange col-md-12">
                    @Html.EditorFor(model => model.DataDe, new { htmlAttributes = new { @Value = Model.DataDe_Filtro, @class = "form-control data input-sm", @name = "start" } })
                    <span class="input-group-addon" style="vertical-align: top; height: 18px; font-size:small">até</span>
                    @Html.EditorFor(model => model.DataAte, new { htmlAttributes = new { @Value = Model.DataAte_Filtro, @class = "form-control data input-sm", @name = "end"} })
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4 col-md-offset-4 text-center" id="divAcoes">
            <br />
            <button type="button" ID="btnFiltrar" class="btn btn-sm btn-primary" name="btnFiltrar" value="btnFiltrar" onclick="aplicarFiltro();">Filtrar</button>
            <button type="button" id="btnLimpar" name="btnLimparFiltro" value="btnLimparFiltro" class="btn btn-sm btn-default" onclick="limpar_Filtros(); aplicarFiltro();">Limpar Filtros</button>
        </div>
    </div>
</div>

<script type="text/javascript">

    function aplicarFiltro() {
        $('#frmPrincipal').submit();
    }

