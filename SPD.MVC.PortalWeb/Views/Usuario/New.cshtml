@model SPD.MVC.PortalWeb.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo Usuário</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            @Html.Label("Nome", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Label("E-mail", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Label("Login", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(model => model.isAtivo,
                          new SelectList(new List<Object>{
                               new { value = "" , text = ""  },
                               new { value = "true" , text = "Ativo"  },
                               new { value = "false" , text = "Inativo" }
                                          }, "value", "text", ""), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.isAtivo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.Label("Funcionalidades", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="card">
                    <div class="card-block">
                        <table>
                            @for (int i = 0; i < Model.ListFuncionalidadeViewModel.Count; i++)
                            {
                                @Html.HiddenFor(model => model.ListFuncionalidadeViewModel[i].ID)
                                <tr>
                                    <td>@Html.CheckBoxFor(model => model.ListFuncionalidadeViewModel[i].Selecionado)</td>
                                    <td>@Html.DisplayFor(model => model.ListFuncionalidadeViewModel[i].Nome)</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <input type="button" value="Cancelar" class="btn btn-default" onclick="Render('Usuario','List')" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/Usuario/UsuarioNew.js"></script>
}

