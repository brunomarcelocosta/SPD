@model SPD.MVC.PortalWeb.ViewModels.UsuarioViewModel

<div class="row alert alert-info" style="margin-left:5px; margin-right:6px;">
    <h4><span class="glyphicon glyphicon-filter"></span> Filtros </h4>
    <div class="row" id="linha_ordenada"></div>
    <div class="row" id="linha">

        <div class="row">

            <div class="form-group col-md-3" id="divNome" style="padding-left:32px;">
                @Html.Label("Nome")
                @Html.EditorFor(model => model.NomeFiltro, new { htmlAttributes = new { @Value = Model.NomeFiltro, @class = "form-control", @style = "width: 250px" } })
            </div>

            <div class="form-group col-md-3" id="divEmail" style="padding-left:32px;">
                @Html.Label("E-mail")
                @Html.EditorFor(model => model.EmailFiltro, new { htmlAttributes = new { @Value = Model.EmailFiltro, @class = "form-control ", @style = "width: 300px" } })
            </div>
            <div class="form-group col-md-2" id="divStatus" style="padding-left:90px;">
                @Html.Label("Status")
                @Html.DropDownListFor(model => model.isAtivoFiltro,
                                         new SelectList(new List<Object>{
                                              new { value = "" , text = "", Selected=true  },
                                              new { value = "true" , text = "Ativo"  },
                                              new { value = "false" , text = "Inativo" }
                                                         }, "value", "text", string.IsNullOrWhiteSpace(Model.isAtivoFiltro) ? "" : Model.isAtivoFiltro),
                                         new { @class = "form-control ", @style = "width: 110px" })
            </div>
            <div class="form-group col-md-3" id="divBloqueado" style="padding-left:60px;">
                @Html.Label("Bloqueado")
                @Html.DropDownListFor(model => model.isBloqueadoFiltro,
                                         new SelectList(new List<Object>{
                                              new { value = "" , text = ""  },
                                              new { value = "true" , text = "Sim"  },
                                              new { value = "false" , text = "Não" }
                                                         }, "value", "text", string.IsNullOrWhiteSpace(Model.isBloqueadoFiltro) ? "": Model.isBloqueadoFiltro),
                                         new { @class = "form-control ", @style = "width: 110px" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4 col-md-offset-4 text-center" id="divAcoes">
            <br />
            <button type="button" ID="btnFiltrar" class="btn  btn-primary" name="btnFiltrar" value="btnFiltrar" onclick="aplicarFiltro();">Filtrar</button>
            <button type="button" id="btnLimpar" name="btnLimparFiltro" value="btnLimparFiltro" class="btn  btn-default" onclick="limpar_Filtros(); aplicarFiltro();">Limpar Filtros</button>
        </div>
    </div>
</div>

<script type="text/javascript">

    function aplicarFiltro() {
        $('#frmPrincipal').submit();
    }

