    //    var tecla = (window.event) ? event.keyCode : e.which;
    //    if ((tecla > 47 && tecla < 58)) return true;
    //    else {
    //        if (tecla == 8 || tecla == 0) return true;
    //        else return false;
    //    }
    //}

    function limpar_Filtros() {

        $("#Nome").val("");
        $("#Email").val("");
        $("#Cpf").val("");
        $("#isAtivoFiltro").val("");
        $("#tipoPacienteFiltro").val("");
        $("#DataDe").val("");
        $("#DataAte").val("");
    }

</script>
