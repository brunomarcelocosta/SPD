@model SPD.MVC.PortalWeb.ViewModels.AgendaViewModel

@{ var controller = ViewContext.Controller as SPD.MVC.PortalWeb.Controllers.AgendaController; }

<div class="row alert alert-info" style="margin-left:5px; margin-right:6px;">
    <h4><span class="glyphicon glyphicon-filter"></span> <b>Filtros </b></h4>
    <div class="row" id="linha_ordenada"></div>
    <div class="row" id="linha">

        <div class="row">

            <div class="form-group col-md-4" id="divDataOper" style="padding-left:32px;">
                @Html.Label("Data")
                <div class="input-group input-daterange col-md-12">
                    @Html.EditorFor(model => model.DataDe, new { htmlAttributes = new { @Value = Model.DataDe_Filtro, @class = "form-control data ", @name = "start", @style = "width: 160px" } })
                </div>
            </div>

            <div class="form-group col-md-4" id="divDentista" style="padding-left:32px;">
                @Html.Label("Dentista")
                @Html.DropDownListFor(model => model.Dentista_string, controller.ListNomeDentistas() as SelectList, "",
                                               new { @class = "form-control ", @style = "width: 250px" } )
            </div>

            <div class="form-group col-md-4" id="divNome" style="padding-left:32px;">
                @Html.Label("Paciente")
                @Html.EditorFor(model => model.Nome_Paciente, new { htmlAttributes = new { @Value = Model.Nome_Paciente, @class = "form-control ", @style = "width: 250px" } })
            </div>

        </div>

    </div>

    <div class="row">
        <div class="form-group col-md-4 col-md-offset-4 text-center" id="divAcoes">
            <br />
            <button type="button" ID="btnFiltrar" class="btn btn-primary" name="btnFiltrar" value="btnFiltrar" onclick="aplicarFiltro();">Filtrar</button>
            <button type="button" id="btnLimpar" name="btnLimparFiltro" value="btnLimparFiltro" class="btn btn-default" onclick="limpar_Filtros(); aplicarFiltro();">Limpar Filtros</button>
        </div>
    </div>

</div>

<script type="text/javascript">

    function aplicarFiltro() {
        $('#frmPrincipal').submit();
    }

    function limpar_Filtros() {

        $("#Nome_Paciente").val("");
        $("#Dentista_string").val("");
        $("#Data_Consulta").val("");
    }

</script>
