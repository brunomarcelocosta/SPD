@model SPD.MVC.PortalWeb.ViewModels.AgendaViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var controller = ViewContext.Controller as SPD.MVC.PortalWeb.Controllers.AgendaController; }

<h2>Agendar Novo Horário</h2>
<hr />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Data", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="input-group input-daterange col-md-10">
            @Html.EditorFor(model => model.DataDe, new { htmlAttributes = new { @Value = Model.DataDe_Filtro, @class = "form-control data ", @name = "start", @style = "width: 160px" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Dentista", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Dentista_string, controller.ListNomeDentistas() as SelectList, "", new { @class = "form-control ", @style = "width:260px" })
        </div>
    </div>

    <div class="form-group">

    </div>

    <div class="form-group">
        @Html.Label("Horário", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Hora_string, controller.ListHoraDisponivel() as SelectList, "", new { @class = "form-control ", @style = "width:260px" })
        </div>
    </div>

}

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/site")

    <script src="~/Scripts/Agenda/AgendaNew.js"></script>

}