@model SPD.MVC.PortalWeb.ViewModels.AgendaViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{ var controller = ViewContext.Controller as SPD.MVC.PortalWeb.Controllers.AgendaController; }

<h2>Agendar Novo Horário</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" />
    <input type="text" id="id_ac" hidden="hidden" />


    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Data", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class=" input-daterange col-md-10">
                @Html.EditorFor(model => model.DataDe, new { htmlAttributes = new { @Value = Model.DataDe_Filtro, @class = "form-control data ", @style = "width: 200px" } })
            </div>
        </div>

        <br />

        <div class="form-group">
            @Html.Label("Dentista", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Dentista_string, controller.ListNomeDentistas() as SelectList, "", new { @class = "form-control ", @style = "width:200px" })
            </div>
        </div>

        <br />

        <div class="form-group">
            @Html.Label("Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="nav">
                @Html.EditorFor(model => model.Nome_Paciente, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                <ul id="selectedValue"></ul>
            </div>
        </div>

        <br />

        <div class="form-group">
            @Html.Label("Horário", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Hora_string, controller.ListHoraDisponivel() as SelectList, "", new { @class = "form-control ", @style = "width:200px" })
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <input type="button" value="Cancelar" class="btn btn-danger" onclick="Render('Agenda','List')" />
            </div>
        </div>

    </div>

}

<style>
    select {
        width: 200px;
    }

    a:link, a:active, a:visited, a:hover {
        text-decoration: none;
        color: black;
    }
    /*--- DROPDOWN ---*/
    #nav ul {
        list-style: none;
        position: absolute;
        padding: 0;
        margin: 0;
        list-style-type: none;
    }
</style>

@*<script src="~/Scripts/jquery-2.0.3.min.js"></script>*@



@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/site")

    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/Agenda/AgendaNew.js"></script>

}